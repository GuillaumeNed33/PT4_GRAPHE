                <Tab text="Fichier">
                    <content>
                        <AnchorPane maxHeight="-Infinity" styleClass="tab_panel">
                            <children>
                                <HBox>
                                    <children>
                                        <Button mnemonicParsing="false" onMouseClicked="#clickFichierImporter" text="Importer" />
                                        <Button mnemonicParsing="false" onMouseClicked="#clickFichierExporter" text="Exporter" />
                                        <Button mnemonicParsing="false" onMouseClicked="#clickFichierEnregistrer" text="Enregistrer" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Affichage">
                    <content>
                        <AnchorPane maxHeight="-Infinity" styleClass="tab_panel">
                            <children>
                                <HBox>
                                    <children>
                                        <Button mnemonicParsing="false" text="Zoom" />
                                        <ToggleButton mnemonicParsing="false" text="Sommets" />
                                        <ToggleButton mnemonicParsing="false" text="Arêtes" />
                                        <ToggleButton mnemonicParsing="false" text="Étiquettes" />
                                        <MenuButton mnemonicParsing="false" text="Couleur">
                                            <items>
                                                <MenuItem mnemonicParsing="false" text="Fond">
                                                    <graphic>
                                                        <ColorPicker />
                                                    </graphic>
                                                </MenuItem>
                                                <MenuItem mnemonicParsing="false" text="Graphe">
                                                    <graphic>
                                                        <ColorPicker />
                                                    </graphic>
                                                </MenuItem>
                                                <MenuItem mnemonicParsing="false" text="Élément">
                                                    <graphic>
                                                        <ColorPicker />
                                                    </graphic>
                                                </MenuItem>
                                            </items>
                                        </MenuButton>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Modifier">
                    <content>
                        <AnchorPane maxHeight="-Infinity" styleClass="tab_panel">
                            <children>
                                <HBox>
                                    <children>
                                        <MenuButton mnemonicParsing="false" text="Modèle">
                                            <items>
                                                <MenuItem mnemonicParsing="false" text="Aléatoire" />
                                                <MenuItem mnemonicParsing="false" text="Circulaire" />
                                    <MenuItem mnemonicParsing="false" text="Modèle de forces" />
                                            </items>
                                        </MenuButton>
                                        <Button mnemonicParsing="false" text="Supprimer" onMouseClicked="#clickSupprimer"/>
                                        <Button mnemonicParsing="false" text="Représentation">
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </padding>
                                        </Button>
                                        <Slider prefWidth="100.0">
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </padding>
                                        </Slider>
                                        <Label text="Taille">
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </padding>
                                        </Label>
                                        <Button mnemonicParsing="false" text="Propriétés" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Édition">
                    <content>
                        <AnchorPane maxHeight="-Infinity" styleClass="tab_panel">
                            <children>
                                <HBox>
                                    <children>
                                        <Slider prefWidth="100.0">
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </padding>
                                        </Slider>
                                        <Label text="Taille du graphe">
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                            </padding>
                                        </Label>
                                        <Button mnemonicParsing="false" onMouseClicked="#clickAjouterSommet" text="Ajouter Sommet" />
                              <Button layoutX="225.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#clickAjouterArete" text="Ajouter Arete" />
                                        <MenuButton mnemonicParsing="false" text="Indice">
                                            <items>
                                                <RadioMenuItem mnemonicParsing="false" text="Aléatoire" />
                                                <RadioMenuItem mnemonicParsing="false" text="Degrès" />
                                            </items>
                                        </MenuButton>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
