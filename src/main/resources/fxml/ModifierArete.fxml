<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root maxWidth="1.7976931348623157E308" prefHeight="272.0" prefWidth="295.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="17.0" text="Liste des aretes" textAlignment="CENTER" />
      <ListView fx:id="listViewSAretes" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="100.0" prefWidth="175.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></ListView>
      <HBox prefWidth="200.0">
         <children>
            <ColorPicker fx:id="couleurChoice" prefWidth="100.0">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </ColorPicker>
            <Label prefWidth="50.0" text="Size :">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="areteSize" prefWidth="100.0" />
         </children></HBox>
      <HBox prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="Poids  :">
               <HBox.margin>
                  <Insets right="20.0" top="3.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="aretePoids" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <Label>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="supprButton" onAction="#supprArete" mnemonicParsing="false" prefHeight="25.0" prefWidth="145.0" text="Supprimer l'arete">
         <VBox.margin>
            <Insets left="65.0" />
         </VBox.margin>
      </Button>
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="205.0">
         <children>
            <Button mnemonicParsing="false" onAction="#modifyArete" prefHeight="27.0" prefWidth="73.0" text="OK">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#fermerModifyArete" prefHeight="27.0" prefWidth="100.0" text="Annuler">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
