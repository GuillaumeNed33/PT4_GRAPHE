<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root maxWidth="1.7976931348623157E308" prefHeight="217.0" prefWidth="498.0" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <HBox prefHeight="31.0" prefWidth="275.0">
         <children>
            <Label text="Position :">
               <HBox.margin>
                  <Insets right="10.0" top="3.0" />
               </HBox.margin></Label>
            <TextField fx:id="PosSommet" prefHeight="25.0" prefWidth="150.0">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin></TextField>
                <Label prefHeight="17.0" prefWidth="65.0" text="Taille :">
                    <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="tailleSommet" prefHeight="25.0" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="275.0">
         <children>
            <Label text="Forme : ">
               <HBox.margin>
                  <Insets right="20.0" top="3.0" />
               </HBox.margin></Label>
            <ChoiceBox fx:id="formeSommet" prefWidth="150.0">
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin></ChoiceBox>
            <Label prefHeight="17.0" prefWidth="75.0" text="Couleur :">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
                <ColorPicker fx:id="couleurSommet" prefHeight="25.0" prefWidth="152.0">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </ColorPicker>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
        <HBox prefHeight="20.0" prefWidth="200.0">
            <children>
                <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" prefWidth="182.0" text="Indice  :">
                    <HBox.margin>
                        <Insets right="20.0" top="3.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="indiceSommet">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin></TextField>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
        <Label fx:id="erreurSommet" prefHeight="34.0" textFill="#ee0000" wrapText="true">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="205.0">
            <children>
                <Button mnemonicParsing="false" onAction="#ModifierSommetSelectionne" prefHeight="27.0" prefWidth="73.0" text="OK">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#fermerPopUpModifierSommet" prefHeight="27.0" prefWidth="100.0" text="Annuler">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
