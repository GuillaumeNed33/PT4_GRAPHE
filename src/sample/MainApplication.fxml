                     <children>
                        <HBox>
                           <children>
                              <MenuButton mnemonicParsing="false" text="Modèle">
                                <items>
                                  <MenuItem mnemonicParsing="false" text="Action 1" />
                                  <MenuItem mnemonicParsing="false" text="Action 2" />
                                </items>
                              </MenuButton>
                              <Button mnemonicParsing="false" text="Supprimer" />
