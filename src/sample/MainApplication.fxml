                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Affichage">
            <content>
              <AnchorPane maxHeight="-Infinity" styleClass="tab_panel">
                     <children>
                        <HBox>
                           <children>
                              <Button mnemonicParsing="false" text="Zoom" />
                              <ToggleButton mnemonicParsing="false" text="Sommets" />
                              <ToggleButton mnemonicParsing="false" text="Arêtes" />
                              <ToggleButton mnemonicParsing="false" text="Étiquettes" />
                              <MenuButton mnemonicParsing="false" text="Couleur">
                                <items>
                                  <MenuItem mnemonicParsing="false" text="Fond">
                                       <graphic>
                                          <ColorPicker />
                                       </graphic>
                                    </MenuItem>
                                  <MenuItem mnemonicParsing="false" text="Graphe">
                                       <graphic>
                                          <ColorPicker />
                                       </graphic>
                                    </MenuItem>
                                    <MenuItem mnemonicParsing="false" text="Élément">
                                       <graphic>
                                          <ColorPicker />
                                       </graphic>
                                    </MenuItem>
